
<div class="card-header d-flex justify-content-between align-items-center">
   <div>
    <h2 class="mt-3">
      Todo Lists
    </h2>
  </div>
  
  <%= link_to 'New Todo List', new_todo_list_path, class: 'btn btn-primary btn-sm ' %>
</div>

<ul class="list-group">
  <% @todo_lists.each do |todo_list| %>
    <li class="list-group-item">

    <div class="d-flex align-items-center justify-content-between">

    <div>
        <p class="m-0">
        <%= link_to todo_list.title, todo_list, class: 'text-decoration-none' %>
        </p>

        <p class="text-secondary m-0">
          <%= todo_list.user.username%>
        </p>
      </div>

       <span class="badge badge-pill badge-<%=todo_list.badge_color%>">
        <%= todo_list.status %>
      </span>


    </div>

      
      

    </li>
  <% end %>
</ul>
