

<div class="card-header d-flex justify-content-between align-items-center">
  
  <div class="align-items-center">

  <div>

  </div>
    <h2 class="mt-3">
      Search
    </h2>
   
    <p class="text-secondary">
      <%=@total.count%>  Results
    </p>

  </div>
  
</div>

<div class="card-body">
 

  <ul class="list-group">
  <% @results.each do |result| %>
    <li class="list-group-item">

      <div class="d-flex align-items-center justify-content-between">

          <% if result.todo_list.user.id == current_user.id %>

            <div>
              <p class="m-0">
              <%= link_to result.todo_list.title, result.todo_list, class: 'text-decoration-none' %>
              </p>

              <p class="text-secondary m-0">
                <%= result.description %>
              </p>
            </div>

            <span class="badge badge-pill badge-<%=result.todo_list.badge_color%>">
              <%= result.todo_list.status %>
            </span>

          <% else %>
            <div>
              <p class="m-0">
                PRIVATE by <%= result.todo_list.user.username%>
              </p>

              <p class="text-secondary m-0">
                <%= result.description %>
              </p>
            </div>

            <div>
<span class="badge badge-pill badge-dark">
              Private
            </span>

            <span class="badge badge-pill badge-<%=result.todo_list.badge_color%>">
              <%= result.todo_list.status %>
            </span>
            </div>

            

          <% end %>
      
          
      </div>
    </li>
  <% end %>
</ul>
</div>

<%= raw pagy_bootstrap_nav(@pagy).html_safe%>
